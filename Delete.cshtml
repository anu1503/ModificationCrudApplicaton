@model ModifiedCrudApp.Models.Employee

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h1 class="card-title mb-0 text-center">@ViewData["Title"] Employee</h1>
        </div>
        <div class="card-body">
            <h3 class="text-danger text-center">Are you sure you want to delete this employee?</h3>
            <div class="mt-4">
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.EmpName)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.EmpName)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Gender)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Gender)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Country)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Country)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.State)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.State)
                    </dd>
                </dl>
            </div>
            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="EmpNo" />
                <button type="submit" class="btn btn-outline-danger delete-hover mb-1">Delete</button>
                <a asp-action="Index" class="btn btn-outline-secondary back-hover mb-1">Back</a>
               

                
            </form>
            <button id="screenshotButton" class="btn btn-outline-success screenshot-hover">Take Screenshot</button>
            
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/html2canvas@1.0.0-rc.7/dist/html2canvas.min.js"></script>
    <script>
        document.getElementById("screenshotButton").addEventListener("click", function () {
            html2canvas(document.body).then(function (canvas) {
                var link = document.createElement('a');
                link.download = 'screenshot.png';
                link.href = canvas.toDataURL();
                link.click();
            });
        });
    </script>
}

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

